{
  "extends": "../tsconfig.json",
  "rootDir": ".",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "storage-js": ["../src"],
      "storage-js/*": ["../src/*"]
    }
  },
  "include": ["./*.ts"]
}
